# Production Environment Variables for NFT Trait Marketplace
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Authentication Secrets
NEXTAUTH_SECRET="your-nextauth-secret-here-minimum-32-characters"
ADMIN_SESSION_SECRET="your-admin-session-secret-here-minimum-32-characters"

# Solana Configuration
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
# Private key for the delegate wallet (base58 encoded)
SOLANA_DELEGATE_PRIVATE_KEY="your-delegate-private-key-here"

# Irys Configuration
IRYS_NODE_URL="https://node1.irys.xyz"
# Private key for Irys uploads (base58 encoded)
IRYS_PRIVATE_KEY="your-irys-private-key-here"

# Optional: Custom RPC endpoints for better performance
# SOLANA_RPC_URL="https://your-custom-rpc-endpoint.com"

# Optional: Development/Staging overrides
# NODE_ENV="production"