    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "./scripts/deploy.sh",
    "deploy:verify": "./scripts/verify-deployment.sh",
    "deploy:rollback": "./scripts/rollback.sh",
    "db:migrate": "psql $DATABASE_URL -f database/migrations/001_initial_schema.sql",
    "db:migrate:local": "psql $DATABASE_URL -f database/migrations/001_initial_schema.sql",
    "db:reset": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:migrate:local",
    "db:seed": "node scripts/seed-local-data.js",
    "dev:setup": "npm install && npm run db:migrate:local && npm run db:seed"
